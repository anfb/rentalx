{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@application*": ["application*"],
      "@domain*": ["domain*"],
      "@infrastructure*": ["infrastructure*"],
      "@interface*": ["interface*"]
    }
  },
  "include": ["src/**/*"]
}
